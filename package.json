{
    "name": "svelte-app",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "watch:tailwind": "postcss public/tailwind.css -o public/build/index.css",
        "build:tailwind": "cross-env NODE_ENV=production postcss public/tailwind.css -o public/build/index.css",
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "start": "yarn run build:tailwind & sirv public",
        "validate": "svelte-check"
    },
    "devDependencies": {
        "postcss-cli": "^8.0.0",
        "postcss-load-config": "^2.1.2",
        "@types/node": "^14.11.2",
        "@rollup/plugin-commonjs": "^15.1.0",
        "@rollup/plugin-node-resolve": "^9.0.0",
        "@rollup/plugin-typescript": "^6.0.0",
        "@tsconfig/svelte": "^1.0.10",
        "cross-env": "7.0.2",
        "rollup": "^2.28.2",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-svelte": "^6.0.1",
        "rollup-plugin-terser": "^7.0.2",
        "cssnano": "^4.1.10",
        "svelte-check": "^1.0.54",
        "svelte-preprocess": "^4.3.2",
        "tailwindcss": "^1.8.10",
        "tslib": "^2.0.1",
        "typescript": "^4.0.3",
        "autoprefixer": "^9.x",
        "@fullhuman/postcss-purgecss": "^3.0.0"
    },
    "dependencies": {
        "sirv-cli": "^1.0.6"
    },
    "peerDependencies": {
        "postcss": "^8.1.1",
        "svelte": "^3.29.0"
    }
}
